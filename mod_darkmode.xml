<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" client="administrator" method="upgrade">
	<name>mod_darkmode</name>
	<author>Rob Huijben</author>
	<creationDate>2024-03</creationDate>
	<copyright>(C) 2007 Rob Huijben</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.md</license>
	<authorEmail>mail@robhuijben.com</authorEmail>
	<authorUrl>www.robhuijben.com</authorUrl>
	<version>0.1.2</version>
	<description>MOD_DARKMODE_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_darkmode">mod_darkmode.php</filename>
		<folder>tmpl</folder>
	</files>
	<media folder="media" destination="mod_darkmode">
        <folder>js</folder>
    </media>
	<languages>
		<language tag="en-GB">language/en-GB/mod_darkmode.ini</language>
		<language tag="en-GB">language/en-GB/mod_darkmode.sys.ini</language>
		<language tag="nl-NL">language/nl-NL/mod_darkmode.ini</language>
		<language tag="nl-NL">language/nl-NL/mod_darkmode.sys.ini</language>
		<language tag="de-DE">language/de-DE/mod_darkmode.ini</language>
		<language tag="de-DE">language/de-DE/mod_darkmode.sys.ini</language>
		<language tag="fr-FR">language/fr-FR/mod_darkmode.ini</language>
		<language tag="fr-FR">language/fr-FR/mod_darkmode.sys.ini</language>
		<language tag="es-ES">language/es-ES/mod_darkmode.ini</language>
		<language tag="es-ES">language/es-ES/mod_darkmode.sys.ini</language>
		<language tag="it-IT">language/it-IT/mod_darkmode.ini</language>
		<language tag="it-IT">language/it-IT/mod_darkmode.sys.ini</language>
		<language tag="pt-PT">language/pt-PT/mod_darkmode.ini</language>
		<language tag="pt-PT">language/pt-PT/mod_darkmode.sys.ini</language>
		<language tag="ru-RU">language/ru-RU/mod_darkmode.ini</language>
		<language tag="ru-RU">language/ru-RU/mod_darkmode.sys.ini</language>
		<language tag="pl-PL">language/pl-PL/mod_darkmode.ini</language>
		<language tag="pl-PL">language/pl-PL/mod_darkmode.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="switcher_label" type="radio" default="0" label="MOD_DARKMODE_FIELD_DARKMODE_LABEL" description="MOD_DARKMODE_FIELD_DARKMODE_DESC">
					<option value="0">MOD_DARKMODE_LABEL_ENABLE</option>
					<option value="1">MOD_DARKMODE_LABEL_DISABLE</option>
				</field>
			</fieldset>
		</fields>
	</config>
	<updateservers>
    	<server type="extension" name="Dark Mode Switcher Update Site">https://raw.githubusercontent.com/robhuijben/mod_darkmode/main/manifest.xml</server>
  	</updateservers>
</extension>
